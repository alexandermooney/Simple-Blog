<%- include('partials/header.ejs') %>

<div class="container">
    <h1 class="title-lg mb-2">Create New Post</h1>
    <a href="/" class="btn btn-none btn-icon"><img class="btn-icon-img" src="/images/arrow.svg" height="15px">Go back</a>

        <form class="edit-post-container" action="/new" method="POST">
            <label for="postTitle">Title:</label>
            <input type="text" name="title" id="postTitle" autofocus required>
            <label for="postAuthor">Author:</label>
            <input type="text" name="author" id="postAuthor" required>
            <label for="postImage">Featured Image URL:</label>
            <div class="show-img">
                <input type="text" name="imageURL" id="postImage" required>
                <div class="img-error-text"></div>
                <img class="img-placeholder" src="/images/placeholder.png" alt="" srcset="">
                <img class="img-loaded hidden" src="" onerror="showErrorMessage()" onload="showImage()">
            </div>
            <label for="postBody">Content:</label>
            <textarea name="body" id="postBody"  required></textarea>
            <input class="btn btn-solid btn-lg bg-primary" type="submit" value="submit">
        </form>

        <script src="/js/new.js"></script>
</div>

<%- include('partials/footer.ejs') %>